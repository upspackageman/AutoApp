# Use Node.js image for Angular
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy only the package.json and package-lock.json files to install dependencies
COPY ./auto-client/package.json .
COPY ./auto-client/package-lock.json .

# Install npm dependencies
RUN npm install --force

# Install Angular CLI
RUN npm install -g @angular/cli@18

# Copy project files
COPY ./auto-client .

# Build the Angular app
RUN ng build --configuration=production

# Stage 2: Serve the Angular app using Nginx
FROM nginx:latest

# Copy the built Angular app from the builder stage
COPY --from=builder /app/dist/auto-client /usr/share/nginx/html

EXPOSE 80







